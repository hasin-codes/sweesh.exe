{
  "name": "sweesh",
  "version": "0.0.1",
  "description": "React + Electron app with TypeScript",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run build:main:watch\" \"npm run build:watch\" \"wait-on dist/main.js dist/renderer.js && electron .\"",
    "build": "webpack --mode production",
    "build:watch": "webpack --mode development --watch",
    "build:main": "tsc src/main.ts --outDir dist --target es2020 --module commonjs --esModuleInterop --skipLibCheck",
    "build:main:watch": "tsc src/main.ts --outDir dist --target es2020 --module commonjs --esModuleInterop --skipLibCheck --watch",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build:main && npm run build",
    "dist": "npm run rebuild && electron-builder",
    "dist:win": "npm run rebuild && electron-builder --win",
    "dist:mac": "npm run rebuild && electron-builder --mac",
    "dist:linux": "npm run rebuild && electron-builder --linux",
    "release": "npm run rebuild && electron-builder --publish always"
  },
  "keywords": [
    "electron",
    "react",
    "typescript"
  ],
  "author": "Hasin Raiyan",
  "license": "N/A",
  "devDependencies": {
    "@tailwindcss/postcss7-compat": "^2.2.17",
    "@tailwindcss/typography": "^0.5.19",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^6.8.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3",
    "html-webpack-plugin": "^5.6.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "tailwindcss": "^4.1.14",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.23.24",
    "groq-sdk": "^0.33.0",
    "jsonwebtoken": "^9.0.2",
    "keytar": "^7.9.0",
    "lucide-react": "^0.546.0",
    "node-global-key-listener": "^0.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1"
  },
  "build": {
    "appId": "com.sweesh.app",
    "productName": "Sweesh",
    "files": [
      "dist/**",
      "public/icons/**",
      "package.json",
      "!**/node_modules/node-global-key-listener/bin/MacKeyServer",
      "!**/node_modules/node-global-key-listener/bin/MacKeyServerHelper*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "public/icons/logo.icns",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "public/icons/logo.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "public/icons"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "hasin-codes",
        "repo": "sweesh.exe"
      }
    ]
  }
}
